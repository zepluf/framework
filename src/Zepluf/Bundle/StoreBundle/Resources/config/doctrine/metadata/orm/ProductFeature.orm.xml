<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ProductFeature" table="product_feature">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="false"/>
    <field name="description" type="string" column="description" length="255" nullable="true"/>
    <field name="order" type="integer" column="order" nullable="false"/>
    <many-to-one field="productFeatureCategory" target-entity="ProductFeatureCategory">
      <join-columns>
        <join-column name="product_feature_category_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="unitOfMeasurement" target-entity="UnitOfMeasurement">
      <join-columns>
        <join-column name="unit_of_measurement_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="priceComponent" target-entity="PriceComponent" mapped-by="feature"/>
    <many-to-many field="productFeatureValue" target-entity="ProductFeatureValue" inversed-by="productFeature">
      <join-table name="product_feature_comprise">
        <join-columns>
          <join-column name="product_feature_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="product_feature_value_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
