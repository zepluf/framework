namespace Zepluf\Bundle\StoreBundle\Tests\Templating;

use Zepluf\Bundle\StoreBundle\Tests\BaseTestCase;
use Zepluf\Bundle\StoreBundle\Templating\Helper\RouterHelper;

class RouterHelperTest extends BaseTestCase
{
    protected $object;

    public static function setUpBeforeClass()
    {
            define('HTTP_SERVER', 'http://localhost');
            define('HTTPS_SERVER', 'https://localhost');
    }

    public function setUp()
    {
        $this->object = new RouterHelper($this->get('router'));
    }

    public function testZenLink()
    {
        $this->assertEquals('a', $this->object->zenLink('a'));
    }

    public function tearDown()
    {
        unset($this->object);
    }
}
